<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- view.hospital.appointment.view -->
        <record id="view_hospital_appointment_tree" model="ir.ui.view">
            <field name="name">hospital.appointment.tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="patient_id" />
                    <field name="ref" />
                    <field name="gender" />
                    <field name="appointment_time" />
                    <field name="booking_date" />
                </tree>
            </field>
        </record>

        <!-- view.hospital.appointment form view -->
        <record id="view_hospital_appointment_form" model="ir.ui.view">
            <field name="name">hospital.appointment.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="patient_id" />
                                <field name="ref" />
                                <field name="gender" />
                                <field name="booking_date" />
                            </group>
                            <group>
                                <field name="appointment_time" />
                            </group>
                        </group>
                        <notebook>
                            <page name="prescription" string="Prescription">
                                
                            </page>
                            <page name="pharmacy" string="Pharmacy">
                                
                            </page>
                        </notebook>

                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        
        <!-- view.hospital.appointment search view -->
        <record id="view_hospital_appointment_search" model="ir.ui.view">
            <field name="name">hospital.appointment.search</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                   
                </search>
            </field>
        </record>

        <!-- action.hospital.appointment window -->
        <record id="action_hospital_appointment" model="ir.actions.act_window">
            <field name="name">Appointments </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.appointment</field >
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                    Create your first Appointment !
                </p>
            </field>
        </record>
        
        <menuitem
                id="menu_appointment"
                name="Appointments"
                action="action_hospital_appointment"
                parent="menu_appointment_master"
                sequence="1"/>
    </data>
</odoo>